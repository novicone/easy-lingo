  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "fastify": "^4.23.0",
    "papaparse": "^5.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/papaparse": "^5.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.0"
  }
}
